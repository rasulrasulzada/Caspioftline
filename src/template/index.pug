extends ../pug_includes/head

block unique-content
    .container.px-3.position-absolute.nav-wrapper
        include ../pug_includes/navbar.pug
    main.main
        .d-flex.align-items-center.position-relative
           .img-div(style="background-image: url('./img/home_slide_1170x700.jpg')")
           img.to-down.mx-auto(src="./img/icons/icon_scrool_down_white.svg")
           .container.p-0.position-absolute.a-x-auto
            .idea
                .content-title.mb-3 CASPISOFTLINE
                .content-motto
                    | FAST AND SMOOTH TECHNICAL LAUNCH FOR YOUR STARTUP
                button.btn.content-btn.text-black.mt-4(type='button', data-toggle='modal', data-target='#ideaModal') SEND IDEA
                #ideaModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
                    .modal-dialog.mx-auto.idea-modal(role='document')                      
                        .modal-content.h-100.mx-auto.mt-5.idea-modal__content
                            button.close.custom-close.mr-4(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') &times;
                            .modal-header.p-0.my-modal-header
                                .idea-modal__title Send Your Idea    
                            .alert.modal-alert(role="alert")
                            form.mt-3(action="")
                                .d-flex.flex-wrap.justify-content-around
                                    .form-item                                    
                                        input#name.idea-input(type="text", name="name",required="")
                                        label.idea-label(for="name") Your Name
                                    .form-item                                      
                                        input#surname.idea-input(type="text", name="surname", required="")
                                        label.idea-label(for="surname") Your Surname
                                    .form-item                  
                                        input#email.idea-input(type="email", name="email", required="")
                                        label.idea-label(for="email") Your Email
                                    .form-item                                      
                                        .d-flex.w-100
                                            select#selectLand.idea-input.form-select.pr-0.pb-0(name="")
                                                option AZ
                                                option EN
                                                option RU
                                            .form-column.my-3
                                            input#number.idea-input.pl-4.number-input(type="number",max="9", required="")
                                            label.number-label.idea-label.text-nowrap(for="number") Your Number
                                .idea-title-div.w-100
                                    input#idea-title.idea-input(type="text", name="idea-title", required="")
                                    label.idea-label(for="idea-title") Idea Title
                                .idea-textarea.w-100                   
                                    textarea#idea.w-100.idea-input(name="yourIdea", rows="7", required="")
                                    label.idea-label(for="idea") Your Idea
                                button#sendBtn.w-100.idea-modal-btn(type="submit") SEND
